# /etc/profile - System-wide shell configuration for VOS

export PATH="/bin:/usr/bin:/disk/bin"
export EDITOR="vi"
export TERM="xterm"

# Colored prompt (green for user, red for root)
if [ "$USER" = "root" ]; then
    PS1="$(printf '\033[1;31m')root$(printf '\033[0m')@vos:$(printf '\033[1;33m')\$PWD$(printf '\033[0m')# "
else
    PS1="$(printf '\033[1;32m')$USER$(printf '\033[0m')@vos:$(printf '\033[1;33m')\$PWD$(printf '\033[0m')\$ "
fi
export PS1

alias ll='ls -la'
alias la='ls -A'
