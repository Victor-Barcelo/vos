# /etc/profile - System-wide shell configuration for VOS
# This file is read by dash on login

# Set up PATH
export PATH="/bin:/usr/bin:/disk/bin"

# Set default editor
export EDITOR="vi"

# Terminal type
export TERM="xterm"

# Simple prompt (no colors to avoid escape sequence issues)
PS1='$ '
if [ "$USER" = "root" ]; then
    PS1='# '
fi
export PS1
