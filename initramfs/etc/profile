# /etc/profile - System-wide shell configuration for VOS
# This file is read by dash on login

# Set up PATH
export PATH="/bin:/usr/bin"

# Set default editor
export EDITOR="vi"

# History settings
export HISTSIZE=100

# Terminal type
export TERM="xterm"

# Simple colored prompt for dash
# Green for user, red for root
if [ "${USER}" = "root" ]; then
    PS1="$(printf '\033[1;31m')root$(printf '\033[0m')@vos# "
else
    PS1="$(printf '\033[1;32m')${USER}$(printf '\033[0m')@vos$ "
fi
export PS1

# Useful shell functions
ll() { ls -la "$@"; }
la() { ls -a "$@"; }

# Welcome message on login
echo ""
echo "  Welcome to VOS"
echo "  Use arrow keys for command history"
echo ""
